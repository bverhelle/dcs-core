

@{
    ViewData["Title"] = @Localizer["Title"];
}
@section css {
    <link href="~/css/Controllers/HomeController.css" rel="stylesheet" />
}

<div class="content row">
    <div class="intro-text">
        <h1>@Localizer["H3Title"]</h1>
        <p>
            <div>@Localizer["Focus"]</div>
            <div>@Localizer["CallToAction"]</div>
        </p>
        <div class="slogan col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
            <p class="slogan">@Localizer["Slogan"]</p>
        </div>

        <p></p>
        <p>
            <div style="clear:both; border: 2px solid red; font-size:large; font-weight: bold; color: red">@Localizer["Covid19"]</div>
        </p>
    </div>
</div>

<div class="row standard-hyperlinks">
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <a class="tile-link" asp-area="" asp-controller="Service" asp-action="Index">
            <div class="tile standard-shadow">
                <div class="img-wrapper">
                    <img class="img-responsive" src="~/images/HomeIndex/Euro.png" />
                </div>
                <div class="text-wrapper">
                    <h3 class="text">
                        @SharedLocalizer["Services"]
                    </h3>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <a class="tile-link" asp-area="" asp-controller="Hairdreams" asp-action="Index">
            <div class="tile standard-shadow">
                <div class="img-wrapper">
                    <img class="img-responsive" src="~/images/HomeIndex/Extensions.png" />
                </div>
                <div class="text-wrapper">
                    <h3 class="text">
                        @SharedLocalizer["ExtensionsAndMore"]
                    </h3>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <a class="tile-link" asp-area="" asp-controller="Home" asp-action="Appointment">
            <div class="tile standard-shadow">
                <div class="img-wrapper">
                    <img class="img-responsive" src="~/images/HomeIndex/Appointment.png" />
                </div>
                <div class="text-wrapper">
                    <h3 class="text">
                        @SharedLocalizer["MakeAnAppointment"]
                    </h3>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <a class="tile-link" asp-area="" asp-controller="Home" asp-action="Parking">
            <div class="tile standard-shadow">
                <div class="img-wrapper">
                    <img class="img-responsive" src="~/images/HomeIndex/parking.png" />
                </div>
                <div class="text-wrapper">
                    <h3 class="text">
                        @SharedLocalizer["Parking"]
                    </h3>
                </div>
            </div>
        </a>
    </div>
</div>


